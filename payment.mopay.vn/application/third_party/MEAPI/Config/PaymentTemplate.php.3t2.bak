    public static function payment_list_v3x($direct = TRUE, $language = 'vi', $target = 'mopay') {
        $CI = & get_instance();
        $CI->load->MEAPI_Library('Language');
        $CI->Language->init($language);
        if (empty($direct) === FALSE) {
            $CI->load->MEAPI_Model('ConfigPaymentModel');
            $CI->load->MEAPI_Library('Mecorp/MecorpPayment', 'MecorpPayment');
            $objConfigItem = $CI->ConfigPaymentModel->getItemGameConfig(444, 1);
            $objConfigDefault = $CI->ConfigPaymentModel->getConfigPayment(0, 0);

            $cache = $CI->cache->load('memcache', 'mopay_info');
            $partner_config = $cache->store('MOPAY_PARTNER_APP_EXCHANGE_' . SCOPE_ID, $CI->MecorpPayment, 'get_app_exchange', array(SCOPE_ID));
            if (empty($partner_config) === FALSE) {
                $rate = $partner_config['rate'];
                $unit = $partner_config['unit'];
            } else {
                $rate = 0;
                $unit = 'Error';
            }
        } else {
            $rate = 1;
            $unit = 'mCoin';
        }

        $payDefault = json_decode($objConfigDefault['value_payment'], true);
        if (IS_ME == 1) {
            $methodPaymentItem = json_decode($objConfigDefault['me_method_payment'], true);
            $paymentItem = json_decode($objConfigDefault['me_payment'], true);
        } else {
            $methodPaymentItem = json_decode($objConfigItem['method_payment'], true);
            $paymentItem = json_decode($objConfigItem['value_payment'], true);
        }
        // print_r($payDefault['_nodepaybank']['acbbank']['price']);
        // print_r($paymentItem);
        $objMethodPay = $methodPaymentItem[$target];
        // $objValuePay    =   $Json_methodPayment[$target];
        $data = array();
        $allData = array();
        if ($objMethodPay) {
            foreach ($objMethodPay as $key) {
                $data[$key] = array();

                // ============ PHUONG THUC THANH TOAN SMS

                if ($key == '_nodepaysms') {
                    if (array_key_exists($key, $paymentItem)) {
                        $data[$key] = array(
                            'title' => 'Nạp qua SMS',
                            'desc' => '',
                            'icon' => 'http://s1-service.mobo.vn/assets/icon/v2/icon_sms.png',
                            'options' => '',
                            'action' => 'list',
                            'identify' => $target . '_nodepaysms',
                            'data' => ''
                        );
                        $dataVlue = array();

                        foreach ($paymentItem[$key] as $keynode => $ValItem) {
                            if (array_key_exists($ValItem, $payDefault[$key])) {
                                $nItem = $payDefault[$key][$ValItem];
                                $dataVlue[] = array(
                                    'title' => $CI->Language->item('PAYMENT_SMS_PAY', array('money' => $nItem['money'])),
                                    'right_title' => $nItem['money'],
                                    'desc' => $CI->Language->item('PAYMENT_SMS_RECEIVE', array('credit' => $nItem['credit'] * $rate, 'unit' => $unit)),
                                    'icon' => 'http://s1-service.mobo.vn/assets/icon/v2/icon_sms.png',
                                    'options' => array(
                                        'phone' => $nItem['money'] . '@' . $nItem['phone'],
                                        'money' => str_replace('.', '', $nItem['money']),
                                        //"content" => "TCM NAP 754123681 562ef6cb5bb0a me",
                                        "confirm" => ""
                                    ),
                                    'action' => 'pay_sms',
                                    'data' => ""
                                );
                            }
                        }
                    }
                    $data[$key]['data'] = $dataVlue;
                    if (!empty($dataVlue)) {
                        $allData[] = $data[$key];
                    }
                }

                // ============ PHUONG THUC THANH TOAN CARD

                if ($key == '_nodepaycard') {

                    if (array_key_exists($key, $paymentItem)) {
                        $data[$key] = array(
                            'title' => 'Nạp card',
                            'desc' => '',
                            'icon' => 'http://s1-service.mobo.vn/assets/icon/v2/icon_card.png',
                            'options' => '',
                            'action' => 'list',
                            'identify' => $target . '_nodepaycard',
                            'data' => ''
                        );
                        $dataVlue = array();
                        foreach ($paymentItem[$key] as $keynode => $ValItem) {
                            if (array_key_exists($ValItem, $payDefault[$key])) {
                                $nItem = $payDefault[$key][$ValItem];
                                $dataVlue[] = array(
                                    'title' => $nItem['title'],
                                    'desc' => $nItem['desc'],
                                    'icon' => $nItem['icon'],
                                    'options' => array(
                                        'type' => 'card',
                                        'card' => $keynode,
                                        'confirm' => $CI->Language->item('PAYMENT_CARD_CONFIRM'),
                                        'keyboard_state' => $nItem['keyboard_state'],
                                        'input' => array('serial', 'pin')
                                    ),
                                    'action' => 'pay_card',
                                    'data' => ""
                                );
                            }
                        }
                    }
                    $data[$key]['data'] = $dataVlue;
                    if (!empty($dataVlue)) {
                        $allData[] = $data[$key];
                    }
                }

                // ============ PHUONG THUC THANH TOAN BANK

                if ($key == '_nodepaybank') {
                    if (array_key_exists($key, $paymentItem)) {
                        $dataVlue = array();

                        $data[$key] = array('title' => 'Nạp qua ngân hàng',
                            'desc' => '',
                            'icon' => 'http://s1-service.mobo.vn/assets/icon/v2/icon_bank.png',
                            'options' => '',
                            'action' => 'list',
                            'identify' => $target . '_nodepaybank',
                            'data' => '');
                        $arrListBank = $payDefault[$key];
                        foreach ($paymentItem[$key] as $keynode => $ValItem) {
                            $nItem = $arrListBank[$keynode];

                            $price = array();
                            foreach ($ValItem['price'] as $keyprice => $valueprice) {
                                if (array_key_exists($valueprice, $nItem['price'])) {
                                    $price[] = array("message" => $nItem['price'][$valueprice],
                                        "description" => $nItem['price'][$valueprice]
                                    );
                                }
                            }

                            $dataVlue[] = array(
                                'title' => $nItem['title'],
                                'desc' => $nItem['desc'],
                                'icon' => $nItem['icon'],
                                'options' => array(
                                    "prices" => $price,
                                    'type' => '1',
                                    'code' => $keynode,
                                    'interface' => 'ibanking'
                                ),
                                'action' => 'pay_ibanking',
                                'data' => ""
                            );
                        }
                    }
                    $data[$key]['data'] = $dataVlue;
                    if (!empty($dataVlue)) {
                        $allData[] = $data[$key];
                    }
                }
            }
        }

        /**
         * // response return
         */
        $response = array(
            'title' => '',
            'desc' => '',
            'icon' => '',
            'options' => array(
                'hotline' => '1900 6611',
                'rate' => 'Bảng tỉ giá',
                'rate_type' => 'inside'
            ),
            'action' => 'list',
            'identify' => $target . '_main',
            'data' => $allData
                /* array(
                  $data['_nodepaysms'],
                  $data['_nodepaycard'],
                  $data['_nodepaybank'],
                  ) */
        );

        $response = self::type_target($target, $response);
        return $response;
    }

